<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ejemplo de informe asociado a las ventas (se genera al darle a imprimir 
        desde la vista Form de Pedidos) -->
    <template id="report_pedidos_view">
        <!-- Aqui la estructura a seguir -->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Cabecera -->
                        <h1 class="text-center"> Albaran del Pedido</h1>
                        <br></br>
                        <br></br>
                        <br></br>
                        <div style="font-size:25px">
                            <b>Datos del Pedido:</b>
                            <span style="float:right">
                                <b>Datos del Cliente:</b>
                            </span>
                        </div>
                       <br></br>
                        <div style="font-size:15px">
                            <b>Numero de Pedido:</b>
                            <span t-field="doc.n_pedido" />
                            <span style="float:right">
                                <b>NIF:</b>
                                <span t-field="doc.nif" />
                            </span>
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Identificador de la Venta:</b>
                            <span t-field="doc.venta" />
                            <span style="float:right">
                                <b>Nombre:</b>
                                <span t-field="doc.nombre_cliente" />
                            </span>
                        </div>
                        <br></br>
                        <div class="text-right" style="font-size:15px">
                            <b>Direccion:</b>
                            <span t-field="doc.direccion_cliente" />
                        </div>
                        <br></br>
                        <div class="text-right" style="font-size:15px">
                            <b>Telefono:</b>
                            <span t-field="doc.telefono_cliente" />
                        </div>
                        <br></br>
                        <div class="text-right" style="font-size:15px">
                            <b>Email:</b>
                            <span t-field="doc.email_cliente" />
                        </div>
                        <br></br>
                        <table class="table table-bordered">
                            <thead>
                                <tr class="text-center" style="font-size:15px">
                                    <th>Empresa de Logistica</th>
                                    <th>Fecha de Expedicion</th>
                                    <th>Fecha de Recepcion</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-center" style="font-size:15px">
                                    <td>
                                        <span t-field="doc.mensajeria" />
                                    </td>
                                    <td>
                                        <span t-field="doc.fecha_expedicion" />
                                    </td>
                                    <td>
                                        <span t-field="doc.fecha_recepcion" />
                                    </td>
                                    <td>
                                        <span t-field="doc.estado" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report id="report_pedidos" model="moracorp.pedidos" string="Albaran del Pedido" name="Moracorp.report_pedidos_view" file="Moracorp.report_pedidos_view" report_type="qweb-pdf" />
</odoo>