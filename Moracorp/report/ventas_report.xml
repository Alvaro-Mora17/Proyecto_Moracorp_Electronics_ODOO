<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ejemplo de informe asociado a las ventas (se genera al darle a imprimir 
        desde la vista Form de Ventas) -->
    <template id="report_ventas_view">
        <!-- Aqui la estructura a seguir -->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Cabecera -->
                        <h1 class="text-center"> Factura de Venta</h1>
                        <br></br>
                        <br></br>
                        <br></br>
                        <div style="font-size:25px">
                            <b>Datos de la Transaccion:</b>
                            <span style="float:right">
                                <b>Datos del Cliente:</b>
                            </span>
                        </div>
                       <br></br>
                        <div style="font-size:15px">
                            <b>Numero de Transaccion:</b>
                            <span t-field="doc.n_transaccion" />
                            <span style="float:right">
                                <b>NIF:</b>
                                <span t-field="doc.cliente.nif" />
                            </span>
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Fecha de Compra:</b>
                            <span t-field="doc.fecha_compra" />
                            <span style="float:right">
                                <b>Nombre:</b>
                                <span t-field="doc.cliente.nombre" />
                            </span>
                        </div>
                        <br></br>
                        <div class="text-right" style="font-size:15px">
                            <b>Direccion:</b>
                            <span t-field="doc.cliente.direccion" />
                        </div>
                        <br></br>
                        <div class="text-right" style="font-size:15px">
                            <b>Ciudad:</b>
                            <span t-field="doc.cliente.localizacion" />
                            <br></br>
                            <b>CP:</b>
                            <span t-field="doc.cliente.codigo_postal" />
                        </div>
                        <br></br>
                        <div class="text-right" style="font-size:15px">
                            <b>Telefono:</b>
                            <span t-field="doc.cliente.telefono" />
                        </div>
                        <br></br>
                        <div class="text-right" style="font-size:15px">
                            <b>Email:</b>
                            <span t-field="doc.cliente.email" />
                        </div>
                        <br></br>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr class="text-center" style="font-size:15px">
                                    <th>Nombre del Producto</th>
                                    <th>Cantidad en Stock</th>
                                    <th>Cantidad Vendida</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-center" style="font-size:15px" t-foreach="doc.productos" t-as="producto">
                                    <td>
                                        <span t-field="producto.producto" />
                                    </td>
                                    <td>
                                        <span t-field="producto.cantidad" />
                                    </td>
                                    <td>
                                        <span t-field="producto.cantidad_vendida" />
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr class="text-right" style="font-size:15px">
                                    <td colspan="3">
                                        <b>Total de Compra:</b>
                                        <span t-field="doc.precio_venta" />
                                        <a>â‚¬</a>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report id="report_ventas" model="moracorp.ventas" string="Factura de Venta" name="Moracorp.report_ventas_view" file="Moracorp.report_ventas_view" report_type="qweb-pdf" />
</odoo>