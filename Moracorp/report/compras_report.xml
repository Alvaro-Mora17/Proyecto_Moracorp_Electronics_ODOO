<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ejemplo de informe asociado a las compras (se genera al darle a imprimir 
        desde la vista Form de Compras) -->
    <template id="report_compras_view">
        <!-- Aqui la estructura a seguir -->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Cabecera -->
                        <h1 class = "text-center"> Factura de Compra</h1>
                        <br></br>
                        <br></br>
                        <br></br>
                        <div style="font-size:25px">
                            <b>Datos de la Transaccion:</b>
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Numero de Transaccion:</b>
                            <span t-field="doc.n_transaccion" />
                            <span style="float:right">
                                <b>Fecha de Compra:</b>
                                <span t-field="doc.fecha_compra" />
                            </span>
                        </div>
                        <br></br>
                        <div style="font-size:25px">
                            <b>Datos del Proveedor:</b>
                            <span style="float:right;font-size:15px">
                                <b>Fecha de Entrega:</b>
                                <span t-field="doc.fecha_entrega" />
                            </span>
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Nombre del Proveedor:</b>
                            <span t-field="doc.proveedor" />
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Direccion del Proveedor:</b>
                            <span t-field="doc.proveedor.direccion" />
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Ciudad:</b>
                            <span t-field="doc.proveedor.sede" />
                            <b>CP:</b>
                            <span t-field="doc.proveedor.codigo_postal" />
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Telefono:</b>
                            <span t-field="doc.proveedor.telefono" />
                        </div>
                        <br></br>
                        <div style="font-size:15px">
                            <b>Email:</b>
                            <span t-field="doc.proveedor.email" />
                        </div>
                        <br></br>
                        <table class = "table table-striped table-hover">
                            <thead>
                                <tr class = "text-right" style="font-size:15px">
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unidad sin IVA</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class = "text-right" style="font-size:15px">
                                    <td>
                                        <span t-field="doc.producto" />
                                    </td>
                                    <td>
                                        <span t-field="doc.cantidad" />
                                    </td>
                                    <td>
                                        <span t-field="doc.precio_unidad" />
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr class = "text-right" style="font-size:15px">
                                    <td colspan="3">
                                        <b>Porcentaje de IVA:</b>
                                        <span t-field="doc.porcentaje_iva" />
                                        <a>%</a>
                                    </td>
                                </tr>
                                <tr class = "text-right" style="font-size:15px">
                                    <td colspan="3">
                                        <b>Precio Unidad con IVA:</b>
                                        <span t-field="doc.precio_iva" />
                                        <a>€</a>
                                    </td>
                                </tr>
                                <tr class = "text-right" style="font-size:15px">
                                    <td colspan="3">
                                        <b>Total de Compra:</b>
                                        <span t-field="doc.precio_total" />
                                        <a>€</a>
                                    </td>
                                </tr>   
                            </tfoot>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report id="report_compras" model="moracorp.compras" string="Factura de Compra" name="Moracorp.report_compras_view" file="Moracorp.report_compras_view" report_type="qweb-pdf" />
</odoo>