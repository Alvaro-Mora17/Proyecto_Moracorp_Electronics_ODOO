<odoo>
  <data>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="transaccion_venta_action_window">
      <field name="name">Transaccion de Venta de Moracorp Electrics</field>
      <!-- Nombre del modelo que mostraremos en la vista-->
      <field name="res_model">moracorp.transaccion_venta</field>
      <!-- Indicamos que nuestro formulario tendrá vista tree (para mostrar todos los datos
      y vista form (para crear o editar datos)
      La vista Form no la definimos, por lo cual tendremos la version automatica.
      La vista tree la definiremos mas abajo.
      -->
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item 
    En este ejemplo, todo el menu de "menuitem" esta puesto como ejemplo, no hace una función concreta
    -->
    <!-- actions -->
    <menuitem name="Transaccion" id="transaccion_menu" parent="moracorp_menu_root" action="transaccion_venta_action_window" />


    <!-- Odoo puede colocar vistas automaticas, aunque con un aspecto y funcionalidad mejorable
    Nosotros, para afinarlo, explicaremos de manera explicita como es cada vista -->

    <!-- Definimos como es la vista explicita de la lista-->

    <!-- Vista Tree -->
    <record model="ir.ui.view" id="transaccion_venta_tree_view">
      <field name="name">Lista de Transacciones</field>
      <field name="model">moracorp.transaccion_venta</field>
      <field name="arch" type="xml">
        <tree>
          <field name="producto"/>
          <field name="cantidad" />
          <field name="cantidad_vendida" />
        </tree>
      </field>
    </record>

    <!-- Vista Form -->
    <record model="ir.ui.view" id="transaccion_venta_form_view">
      <field name="name">Formulario de Transaccion de Venta</field>
      <field name="model">moracorp.transaccion_venta</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="producto" />
            </group>
            <group>
              <field name="cantidad" />
            </group>
            <group>
              <field name="cantidad_vendida"/>
            </group>
          </group>
        </form>
      </field>
    </record>
  </data>
</odoo>