<odoo>
  <data>
    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="ventas_action_window">
      <field name="name">Ventas de Moracorp Electrics</field>
      <!-- Nombre del modelo que mostraremos en la vista-->
      <field name="res_model">moracorp.ventas</field>
      <!-- Indicamos que nuestro formulario tendrá vista tree (para mostrar todos los datos
      y vista form (para crear o editar datos)
      La vista Form no la definimos, por lo cual tendremos la version automatica.
      La vista tree la definiremos mas abajo.
      -->
      <field name="view_mode">tree,form,pivot</field>
    </record>


    <!-- Top menu item 
    En este ejemplo, todo el menu de "menuitem" esta puesto como ejemplo, no hace una función concreta
    -->
    <!-- actions -->
    <menuitem name="Ventas" id="ventas_menu" parent="moracorp_menu_root" action="ventas_action_window" />


    <!-- Odoo puede colocar vistas automaticas, aunque con un aspecto y funcionalidad mejorable
    Nosotros, para afinarlo, explicaremos de manera explicita como es cada vista -->

    <!-- Definimos como es la vista explicita de la lista-->

    <!-- Vista Tree -->
    <record model="ir.ui.view" id="ventas_tree_view">
      <field name="name">Lista de Ventas</field>
      <field name="model">moracorp.ventas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id" />
          <field name="n_transaccion" />
          <field name="fecha_compra" />
          <field name="cliente" />
          <field name="productos" />
          <field name="precio_venta"/>
        </tree>
      </field>
    </record>

    <!-- Vista Form -->
    <record model="ir.ui.view" id="ventas_form_view">
        <field name="name">Formulario de Ventas</field>
        <field name="model">moracorp.ventas</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="n_transaccion" />
                    </group>
                    <group>
                        <field name="fecha_compra" />
                    </group>
                    <group>
                        <field name="cliente" />
                    </group>
                    <group>
                        <field name="productos" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Vista Pivot -->
    <record model="ir.ui.view" id="ventas_pivot_view">
      <field name="name">Tabla de Ventas</field>
      <field name="model">moracorp.ventas</field>
      <field name="arch" type="xml">
        <pivot string="Tabla de Ventas">
          <field name="n_transaccion" type="row" />
          <field name="fecha_compra" type="col" />
          <field name="cliente" type="col" />
          <field name="precio_venta" type="measure"/>
        </pivot>
      </field>
    </record>

  </data>
</odoo>