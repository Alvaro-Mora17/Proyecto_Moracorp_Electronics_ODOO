<odoo>
  <data>
    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="compras_action_window">
      <field name="name">Compras de Moracorp Electrics</field>
      <!-- Nombre del modelo que mostraremos en la vista-->
      <field name="res_model">moracorp.compras</field>
      <!-- Indicamos que nuestro formulario tendrá vista tree (para mostrar todos los datos
      y vista form (para crear o editar datos)
      La vista Form no la definimos, por lo cual tendremos la version automatica.
      La vista tree la definiremos mas abajo.
      -->
      <field name="view_mode">tree,form,pivot</field>
    </record>


    <!-- Top menu item 
    En este ejemplo, todo el menu de "menuitem" esta puesto como ejemplo, no hace una función concreta
    -->
    <!-- actions -->
    <menuitem name="Compras" id="compras_menu" parent="moracorp_menu_root" action="compras_action_window" />


    <!-- Odoo puede colocar vistas automaticas, aunque con un aspecto y funcionalidad mejorable
    Nosotros, para afinarlo, explicaremos de manera explicita como es cada vista -->

    <!-- Definimos como es la vista explicita de la lista-->

    <!-- Vista Tree -->
    <record model="ir.ui.view" id="compras_tree_view">
      <field name="name">Lista de Compras</field>
      <field name="model">moracorp.compras</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="n_transaccion"/>
          <field name="proveedor" />
          <field name="fecha_compra"/>
          <field name="fecha_entrega"/>
          <field name="producto"/>
          <field name="precio_unidad"/>
          <field name="porcentaje_iva"/>
          <field name="precio_iva"/>
          <field name="cantidad"/>
          <field name="precio_total"/>
        </tree>
      </field>
    </record>

    <!-- Vista Form -->
    <record model="ir.ui.view" id="compras_form_view">
        <field name="name">Formulario de Compras</field>
        <field name="model">moracorp.compras</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="n_transaccion"/>
                    </group>
                    <group>
                        <field name="proveedor"/>
                    </group>
                    <group>
                        <field name="fecha_compra"/>
                    </group>
                    <group>
                        <field name="fecha_entrega"/>
                    </group>
                    <group>
                        <field name="producto"/>
                    </group>
                    <group>
                        <field name="precio_unidad"/>
                    </group>
                    <group>
                        <field name="porcentaje_iva"/>
                    </group>
                    <group>
                        <field name="cantidad"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Vista Pivot -->
    <record model="ir.ui.view" id="compras_pivot_view">
      <field name="name">Tabla de Compras</field>
      <field name="model">moracorp.compras</field>
      <field name="arch" type="xml">
        <pivot string="Tabla de Compras">
          <field name="producto" type="row" />
          <field name="proveedor" type="col" />
          <field name="fecha_compra" type="col"/>
          <field name="precio_unidad" type="measure" />
          <field name="porcentaje_iva" type="measure" />
          <field name="precio_iva" type="measure" />
          <field name="cantidad" type="measure" />
          <field name="precio_total" type="measure"/>
        </pivot>
      </field>
    </record>
  </data>
</odoo>