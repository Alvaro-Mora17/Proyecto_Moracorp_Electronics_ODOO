<odoo>
  <data>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="pedidos_action_window">
      <field name="name">Pedidos de Moracorp Electrics</field>
      <!-- Nombre del modelo que mostraremos en la vista-->
      <field name="res_model">moracorp.pedidos</field>
      <!-- Indicamos que nuestro formulario tendrá vista tree (para mostrar todos los datos
      y vista form (para crear o editar datos)
      La vista Form no la definimos, por lo cual tendremos la version automatica.
      La vista tree la definiremos mas abajo.
      -->
      <field name="view_mode">tree,form,calendar</field>
    </record>


    <!-- Top menu item 
    En este ejemplo, todo el menu de "menuitem" esta puesto como ejemplo, no hace una función concreta
    -->
    <!-- actions -->
    <menuitem name="Pedidos" id="pedidos_menu" parent="moracorp_menu_root" action="pedidos_action_window" />


    <!-- Odoo puede colocar vistas automaticas, aunque con un aspecto y funcionalidad mejorable
    Nosotros, para afinarlo, explicaremos de manera explicita como es cada vista -->

    <!-- Definimos como es la vista explicita de la lista-->

    <!-- Vista Tree -->
    <record model="ir.ui.view" id="pedidos_tree_view">
      <field name="name">Lista de Pedidos</field>
      <field name="model">moracorp.pedidos</field>
      <field name="arch" type="xml">
        <tree decoration-danger="estado == 'categoria1'" decoration-info="estado == 'categoria2'" decoration-success="estado == 'categoria3'">
          <field name="id" />
          <field name="n_pedido" />
          <field name="venta" />
          <field name="distribuidor" />
          <field name="nif" />
          <field name="nombre_cliente" />
          <field name="direccion_cliente" />
          <field name="telefono_cliente" />
          <field name="email_cliente" />
          <field name="mensajeria" />
          <field name="fecha_expedicion" />
          <field name="fecha_recepcion" />
          <field name="estado" />
        </tree>
      </field>
    </record>

    <!-- Vista Form -->
    <record model="ir.ui.view" id="pedidos_form_view">
      <field name="name">Formulario de Pedidos</field>
      <field name="model">moracorp.pedidos</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="n_pedido" />
            </group>
            <group>
              <field name="venta" />
            </group>
            <group>
              <field name="distribuidor" />
            </group>
            <group>
              <field name="nif" />
            </group>
            <group>
              <field name="nombre_cliente" />
            </group>
            <group>
              <field name="direccion_cliente" />
            </group>
            <group>
              <field name="telefono_cliente" />
            </group>
            <group>
              <field name="email_cliente" />
            </group>
            <group>
              <field name="mensajeria" />
            </group>
            <group>
              <field name="fecha_expedicion" />
            </group>
            <group>
              <field name="fecha_recepcion" />
            </group>
            <group>
              <field name="estado" />
            </group>
          </group>
        </form>
      </field>
    </record>

    <!-- Vista Calendar -->
    <record model="ir.ui.view" id="productos_calendar_view">
      <field name="name">Calendario de Pedidos</field>
      <field name="model">moracorp.pedidos</field>
      <field name="arch" type="xml">
        <calendar string="Pedidos" date_start="fecha_expedicion" date_stop="fecha_recepcion" event_open_popup="1" color="n_pedido" mode="month">
          <field name="n_pedido" />
          <field name="venta" />
          <field name="distribuidor" />
          <field name="nif" />
          <field name="direccion_cliente" />
          <field name="telefono_cliente" />
          <field name="mensajeria" />
          <field name="estado" />
        </calendar>
      </field>
    </record>

    <!-- Vista Search -->
    <record model="ir.ui.view" id="pedidos_search_view">
      <field name="name">Busqueda de Pedidos</field>
      <field name="model">moracorp.pedidos</field>
      <field name="arch" type="xml">
        <search>
          <field name="n_pedido" />
          <field name="venta" />
          <field name="distribuidor" />
          <field name="nif" />
          <field name="direccion_cliente" />
          <field name="telefono_cliente" />
          <field name="email_cliente" />
          <field name="mensajeria" />
          <field name="estado" />
          <filter string="Pedidos en Almacen " name="almacen" domain="[('estado','=','categoria1')]"/>
          <filter string="Pedidos en Reparto " name="reparto" domain="[('estado','=','categoria2')]"/>
          <filter string="Pedidos Entregados " name="entregados" domain="[('estado','=','categoria3')]"/>
        </search>
      </field>
    </record>

  </data>
</odoo>